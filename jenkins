pipeline {
    agent any
    
    stages {
        stage ('build') {
            steps {
                echo 'building...'
                sh 'cd webapp && npm install'
                sh 'cd webapp && npm run build'
            }
        }
        stage ('deploy') {
            steps {
                echo 'deploying...'
                sh 'scp -r webapp/dist ubuntu@172.31.13.18:/home/ubuntu/dist'
            }
        }
}   
}
